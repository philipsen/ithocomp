{
  "name": "itho-api",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/index.js",
    "watch-node": "nodemon dist/index.js",
    "watch-full": "concurrently -k -p \"[{name}]\" -n \"TS,Node,Front\" -c \"cyan.bold,green.bold,red.bold\" \"npm run watch-ts\" \"npm run watch-node\" \"npm run watch-front\"",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TS,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch-front": "cd ../itho-app && npm run build-watch",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/index.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/socket.io": "^1.4.38",
    "connect-mongo": "^4.6.0",
    "dotenv": "^6.0.0",
    "express": "^4.18.2",
    "express-session": "^1.15.6",
    "mongoose": "^5.13.15",
    "mqtt": "^2.18.1",
    "socket.io": "^2.5.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@types/connect-mongo": "0.0.32",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.10",
    "@types/mongoose": "^5.2.7",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "jest": "^29.3.1",
    "node-sass": "^7.0.3",
    "nodemon": "^2.0.20",
    "shelljs": "^0.8.5",
    "supertest": "^3.0.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  }
}
